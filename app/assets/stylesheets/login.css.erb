* {
    margin: 0;
    padding: 0;
}

.globalContainer {
    background-image: url(<%= asset_path 'wp1.jpg' %>);
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.localContainer {
    display: flex;
    align-items: center;
    justify-content: center;
}

.centerTitle {
    text-align: center;
}

.loginTitle {
    color: white;
    font-size: 45px;
}

.formContainer {
    margin-top: 20px;

}

.formGroup {
    position: relative;
    width: 75%;
    margin-top: 10px;
}

.inputField {
    padding-left: 30px;
    height: 45px;
    width: 100%;
    border-color: transparent;
    border-bottom: 1px solid white;
    background-color: transparent;
    color: white;
}

input::placeholder {
    color: white;
}

.inputIcon {
    position: absolute;
    left: 5%;
    top: 50%;
    transform: translateY(-50%);
}

.buttonContainer {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    width: 100%;
}

.button {
    border-radius: 35px;
    width: 100%;
    
}

.btn {
    padding: 10px 0;
    font-size: 15px;
    font-weight: bold;
    color: white;
    width: 100%;
    border: 0;
    border-radius: 35px;
    background-color: #004351;
    cursor: pointer;
}

<%# --------------------------------------- navigation ------------------------------------------------ %>

.navigation {
    background-color: dimgray;
    padding: 10px 0;
}

.elements {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin: 0 50px;

}

.element {
    display: flex;
    align-items: center;
    margin: 0 20px;
}

