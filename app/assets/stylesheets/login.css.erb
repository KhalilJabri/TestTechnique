    color: white;
    } */
    
    .userPro {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .userPro p, a {
        padding-top: 5px;
        color: white;
        text-decoration: none;
}

<%# ------------------------------------- list Of Users ------------------------------------------ %>

.contentContainer {
    display: flex; 
    justify-content: center;
}

.tableContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    width: 70%;
}

table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}
  
td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}
  
tr:nth-child(even) {
    background-color: #dddddd;
}

.globalButtonContainer {

}

.buttonsContainer {
    display: flex;
    justify-content: center;
}

.editbuttonAction {
    margin: 5px;
    padding: 10px;
    background-color: yellow;
    border-radius: 10px;
    background-color: #4EBBDA;
}

.deletebuttonAction {
    margin: 5px;
    padding: 10px;
    background-color: yellow;
    border-radius: 10px;
    background-color: red;
}